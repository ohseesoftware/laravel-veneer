{
    "name": "ohseesoftware/laravel-veneer",
    "description": "Laravel Veneer offers a suite of fixture data and mocking methods for you to use to coverage the 80% of mocking 3rd party services.",
    "keywords": [
        "ohseesoftware",
        "laravel",
        "mocking",
        "fixture"
    ],
    "homepage": "https://github.com/ohseesoftware/laravel-veneer",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Owen Conti",
            "email": "owen@ohseemedia.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "illuminate/contracts": "^8.0",
        "illuminate/support": "^8.0",
        "illuminate/testing": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.4",
        "mockery/mockery": "^1.4",
        "orchestra/testbench": "^6.7",
        "php-coveralls/php-coveralls": "^2.4",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "*"
    },
    "autoload": {
        "psr-4": {
            "OhSeeSoftware\\LaravelVeneer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OhSeeSoftware\\LaravelVeneer\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "fix": [
            "./vendor/bin/php-cs-fixer fix --config .php-cs-fixer.dist.php src tests"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {}
    }
}
